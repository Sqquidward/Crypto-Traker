<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_light">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:fontFamily="@font/lato_black"
            android:text="Hello,"
            android:textSize="35dp"
            android:textStyle="bold"/>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/hello_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:fontFamily="@font/lato_black"
            android:text="friend"
            android:textSize="35dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/sign_style"
            app:cardCornerRadius="17dp">

            <TextView
                android:id="@+id/name"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Name Surname"
                android:textSize="16dp"
                android:fontFamily="@font/lato_black"/>

            <TextView
                android:id="@+id/email"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Name Surname"
                android:textSize="12dp"
                android:fontFamily="@font/lato_black"/>

            <ImageView
                android:id="@+id/icon_menu"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:src="@drawable/icon"
                android:layout_gravity="center"
                android:layout_marginLeft="140dp">
            </ImageView>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="165dp"
            android:layout_height="290dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/sign_style"
            app:cardCornerRadius="17dp">
            <androidx.appcompat.widget.AppCompatButton
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="130dp"
                android:layout_gravity="center"

                android:background="@drawable/custom_button"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="View more"
                android:textSize="10dp"
                android:fontFamily="@font/lato_black">
            </androidx.appcompat.widget.AppCompatButton>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="165dp"
            android:layout_height="190dp"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/sign_style"
            app:cardCornerRadius="17dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stock exchange"
                android:textSize="16dp"
                android:fontFamily="@font/lato_black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   name                                                 year"
                android:textSize="8dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp">

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_exchange"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="40dp">

            </androidx.recyclerview.widget.RecyclerView>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/stock_exchange"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="80dp"
                android:layout_gravity="center"

                android:background="@drawable/custom_button"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="View more"
                android:textSize="10dp"
                android:fontFamily="@font/lato_black">
            </androidx.appcompat.widget.AppCompatButton>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <androidx.cardview.widget.CardView
            android:layout_width="165dp"
            android:layout_height="220dp"
            android:layout_marginTop="520dp"
            android:background="@drawable/sign_style"
            app:cardCornerRadius="17dp">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="150dp"

                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="95dp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/lato_black"
                android:text="View more"
                android:textSize="10dp"></androidx.appcompat.widget.AppCompatButton>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="165dp"
            android:layout_height="320dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="420dp"
            android:background="@drawable/sign_style"
            app:cardCornerRadius="17dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_market"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="40dp">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lato_black"
                android:text="Stock market"
                android:textSize="16dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:text="name                   price                    high 24"
                android:textSize="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Stock_market"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="150dp"

                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="145dp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/lato_black"
                android:text="View more"
                android:textSize="10dp">

            </androidx.appcompat.widget.AppCompatButton>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>